    <!-- /// -->


  </head>

  <body>
        <a href="https://github.com/heroku/hstore_example"><img style="position: absolute; top: 0; right: 0; border: 0;z-index: 3000" src="https://a248.e.akamai.net/assets.github.com/img/30f550e0d38ceb6ef5b81500c64d970b7fb0f028/687474703a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6f72616e67655f6666373630302e706e67" alt="Fork me on GitHub"></a>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a href="/" class="brand">hstore example</a>
          <!--
            IMPORTANT:
            This is Heroku specific markup. Remove to customize.
          -->
          <a href="/" class="brand" id="heroku">by <strong>heroku</strong></a>
          <!-- /// -->
        </div>
      </div>
    </div>

    <div class="container" id="getting-started">
      <div class="row">
        <div class="span8 offset2">
          <div class="page-header">

          </div>
              <% [:notice, :error, :alert].each do |level| %>
                <% unless flash[level].blank? %>
                  <div data-alert="alert" class="alert alert-<%= flash_class(level) %> fade in">
                    <a class="close" data-dismiss="alert" href="#">&times;</a>
                    <%= content_tag :p, flash[level] %>
                  </div>
                <% end %>
              <% end %>
              <%= yield %>
        </div>
      </div>
    </div>
    <%= javascript_include_tag "application" %>
    <%= yield :js %>

